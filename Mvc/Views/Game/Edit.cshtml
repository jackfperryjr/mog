@model Mvc.Models.Game

@{
    ViewData["Title"] = "| Edit";
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}

<h2 class="lightSpeedIn">edit game</h2>
<hr />
<form asp-action="Edit">
    <div class="add-edit-list">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="Title" class="login-bar login-picture" placeholder="Enter game title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="ReleaseDate" class="login-bar login-picture" placeholder='Enter release date ex. "March 3, 1982"'/>
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="Platform" class="login-bar login-picture" placeholder='Enter platform ex. "Playstation 1"'/>
                    <span asp-validation-for="Platform" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="Picture" class="login-bar login-picture" placeholder="http://localhost:5000/images/ff-&lt;game&gt;-full-logo.jpg" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div id="desc-position" class="col-md-8">
                <div class="form-group">
                    <input type="hidden" asp-for="GameId" />
                    <textarea id="desc-input" asp-for="Description" class="login-bar" placeholder="Enter game description in this space"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span> save</button>
    </div>
</form>
<div>
    <a class="btn btn-default" asp-action="Index"><span class="glyphicon glyphicon-arrow-left"></span> back to list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
