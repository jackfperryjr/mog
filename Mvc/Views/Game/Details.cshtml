@model Mvc.Models.Game

@using Microsoft.AspNetCore.Identity
@using Mvc.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "| Game Details";
    string imagePath = Model.Picture;
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}

<h2 class="lightSpeedIn">@Html.DisplayFor(model => model.Title)</h2>
<hr />
<div id="detail-view">
    <div class="row">
        <div class="col-md-6">
            <img class="character-profile-img" src="~/@imagePath" alt="@Html.DisplayFor(model => model.Title)" title="Logo for @Html.DisplayFor(model => model.Title)"/>
        </div>
        <div class="col-md-6">
            <h4><strong>@Html.DisplayNameFor(model => model.ReleaseDate)</strong>: @Html.DisplayFor(model => model.ReleaseDate)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Platform)</strong>: @Html.DisplayFor(model => model.Platform)</h4>
            <!-- <h4><strong>@Html.DisplayNameFor(model => model.Characters)</strong>: @Html.DisplayFor(model => model.Characters)</h4> -->
            <h4 id="desc">@Html.DisplayFor(model => model.Description)</h4>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-default" onclick="history.go(-1);"><span class="glyphicon glyphicon-arrow-left"></span> back to list</a>
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="btn btn-default index-button" asp-action="Edit" asp-route-id="@Model.GameId"><span class="glyphicon glyphicon-pencil"></span> edit</a>
        <a class="btn btn-danger index-button" data-toggle="modal" href="@("#deleteModal")"><span class="glyphicon glyphicon-remove"></span> delete</a>
        <div class="modal fade" id="@("deleteModal")" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content text-center">
                    @using (Html.BeginForm("Delete", "Game"))
                    {
                        <input type="hidden" value="@Model.GameId" name="GameId" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">X</button>
                            <h4 class="modal-title">Delete @Model.Title</h4>
                        </div>
                        <div class="modal-body">
                            <img class="character-delete-img-game" asp-route-id="@Model.GameId" src="~/@imagePath" alt="@Html.DisplayFor(model => model.Title)" title="@Html.DisplayFor(model => model.Title)"/>
                            <br/><br/>
                            <p>Are you sure you want to delete @Model.Title?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    }
                </div>
            </div>
        </div>      
    }
</div>
