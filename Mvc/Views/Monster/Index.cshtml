@model PaginatedList<Mvc.Models.Monster>

@using Microsoft.AspNetCore.Identity
@using Mvc.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "| Monsters";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}
<h2 class="lightSpeedIn">monster list</h2>
<hr />
<form asp-action="Index" method="get">
    <div id="input-container">
        <p class="text-left">
            <input class="input-bar" type="text" name="SearchString" placeholder='Search ex. "chocobo"' value="@ViewData["CurrentFilter"]" />
            <button id="search-btn" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
            <a class="btn btn-default back-btn" asp-action="Index"><span class="glyphicon glyphicon-th-list"></span> full list</a>
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="btn btn-default back-btn" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> add monster</a>
            }
            <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]"
            asp-route-page="@(Model.PageIndex - 1)"
            asp-route-currentFilter="@ViewData["CurrentFilter"]"
            class="btn btn-default back-btn @prevDisabled">
            <span class="glyphicon glyphicon-arrow-left"></span>
            </a>
            <a asp-action="Index"
            asp-route-sortOrder="@ViewData["CurrentSort"]"
            asp-route-page="@(Model.PageIndex + 1)"
            asp-route-currentFilter="@ViewData["CurrentFilter"]"
            class="btn btn-default back-btn @nextDisabled">
            <span class="glyphicon glyphicon-arrow-right"></span>
            </a>
        </p>
    </div>
</form>
<div class="index-list">
    <table id="character-list" class="table">
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class="character-list-item">
                    <a asp-action="Details" asp-route-id="@item.MonsterId" >
                        <img class="character-list-thumb" asp-route-id="@item.MonsterId" src="@Url.Content(item.Picture)" alt="Picture of @Html.DisplayFor(modelItem => item.Name)" title="@Html.DisplayFor(modelItem => item.Name)"/>
                    </a>
                </td>
                <td class="character-list-item">
                    <a asp-action="Details" asp-route-id="@item.MonsterId" >@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                @if (SignInManager.IsSignedIn(User))
                    {
                        <td class="character-list-item">
                            <a asp-action="Edit" asp-route-id="@item.MonsterId">edit</a> | 
                            <a data-toggle="modal" href="@("#deleteModal" + item.MonsterId)">delete</a>
                                <div class="modal fade" id="@("deleteModal" + item.MonsterId)" tabindex="-1" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            @using (Html.BeginForm("Delete", "Monster"))
                                            {
                                                <input type="hidden" value="@item.MonsterId" name="MonsterId" />
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">X</button>
                                                    <h4 class="modal-title">Delete @item.Name</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <img class="character-delete-img" asp-route-id="@item.MonsterId" src="@Url.Content(item.Picture)" alt="@Html.DisplayFor(modelItem => item.Name)" title="@Html.DisplayFor(modelItem => item.Name)"/>
                                                    <br/><br/>
                                                    <p>Are you sure you want to delete @item.Name?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-danger">Yes</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>                        
                        </td>
                    }
            </tr>
    }
        </tbody>
    </table>
    <div id="list-btns">
        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]"
        asp-route-page="@(Model.PageIndex - 1)"
        asp-route-currentFilter="@ViewData["CurrentFilter"]"
        class="btn btn-default @prevDisabled">
        <span class="glyphicon glyphicon-arrow-left"></span>
        </a>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]"
        asp-route-page="@(Model.PageIndex + 1)"
        asp-route-currentFilter="@ViewData["CurrentFilter"]"
        class="btn btn-default @nextDisabled">
        <span class="glyphicon glyphicon-arrow-right"></span>
        </a>
    </div>
</div>