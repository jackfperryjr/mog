@model Mvc.Models.Characters

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}

<h2 class="lightSpeedIn">delete character</h2>
<h3 id="delete-warning" class="tada">are you sure?</h3>
<hr />
<div id="detail-view">
    <div class="row">
        <div class="col-md-4">
            <img id="character-profile-img" src="@Url.Content(Model.Picture)" alt="@Html.DisplayFor(model => model.Name)" title="Search for @Html.DisplayFor(model => model.Name) on Google!"/>
        </div>
        <div class="col-md-3">
            <h4><strong>@Html.DisplayNameFor(model => model.Origin)</strong>: @Html.DisplayFor(model => model.Origin)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Race)</strong>: @Html.DisplayFor(model => model.Race)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Gender)</strong>: @Html.DisplayFor(model => model.Gender)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Age)</strong>: @Html.DisplayFor(model => model.Age)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Height)</strong>: @Html.DisplayFor(model => model.Height) (m)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Weight)</strong>: @Html.DisplayFor(model => model.Weight) (kg)</h4>
            <h4><strong>@Html.DisplayNameFor(model => model.Job)</strong>: @Html.DisplayFor(model => model.Job)</h4>
        </div>
        <div class="col-md-5">
            <h4 id="desc"><!-- <strong>@Html.DisplayNameFor(model => model.Description)</strong>: -->@Html.DisplayFor(model => model.Description)</h4>
        </div>
    </div>
</div>
<div>
<a class="btn btn-default" onclick="history.go(-1);"><span class="glyphicon glyphicon-arrow-left"></span> go back</a>

<form asp-action="Delete" style="float: right;">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" ><span class="glyphicon glyphicon-remove"></span> delete</button>
</form>
 