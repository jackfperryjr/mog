@using Microsoft.AspNetCore.Identity
@using Mvc.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Home" asp-action="Index"><img id="tiny-logo" src="~/images/ff-moogle.png" alt="Tiny moogle face." title="Click to go back to search page."></a></li>
            <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Click to manage account.">@UserManager.GetUserName(User)</a></li>
            <li><a asp-area="" asp-controller="Character" asp-action="Index" title="Click to manage characters.">Manage</a></li>
            <li><button id="logout" type="submit" class="btn btn-link navbar-btn navbar-link" title="Click to sign out.">Sign out</button></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <!-- <a href="#" style="cursor:default;">you are not signed in</a> -->
        </li> 
        <!-- <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li> -->
        <li><a asp-area="" asp-controller="Account" asp-action="Login" title="">&emsp; <!-- Sign in --></a></li>
    </ul>
}
