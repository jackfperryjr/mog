@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "| Forgotten password";
}

<h2 class="top-buffer">forget your password?</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="login-bar" placeholder="Enter email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">send <span class="glyphicon glyphicon-arrow-right"></span></button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
