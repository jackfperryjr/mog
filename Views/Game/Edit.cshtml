@model Moogle.Models.Game

@{
    ViewData["Title"] = "| Edit";
}
@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}

<h2>edit game</h2>
<hr />
<form asp-action="Edit">
    <div class="add-edit-list">
        <div class="row">
            <img style="min-width:300px;max-width:500px;min-height:200px;max-height:300px;margin:5px;" asp-route-id="@Model.GameId" src="@Model.Picture" alt="@Model.Title" title="@Model.Title" />
        </div>
        <div class="row" style="margin:50px 0;">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="Title" class="login-bar" style="width:100%;" placeholder="Enter game title" title="Enter game title."/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <span style="color:#cc0000;font-size:10px;margin-bottom:5px;float:left;">game title</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="Picture" class="login-bar" style="width:100%;" placeholder="images/logos/ff-&lt;game-title&gt;.jpg" title="Enter url for picture."/>
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <span style="color:#cc0000;font-size:10px;margin-bottom:5px;float:left;">picture</span>
            </div>
            <div class="col-md-6">
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="ReleaseDate" class="login-bar" style="width:100%;" placeholder='Enter release date ex. "March 3, 1982"' title="Enter game's release date."/>
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <span style="color:#cc0000;font-size:10px;margin-bottom:5px;float:left;">release date</span>
                <div class="form-group" style="margin-bottom:0 !important;">
                    <input type="hidden" asp-for="GameId" />
                    <input asp-for="Platform" class="login-bar" style="width:100%;" placeholder='Enter platform ex. "Playstation 1"' title="Enter the platform game was released on."/>
                    <span asp-validation-for="Platform" class="text-danger"></span>
                </div>
                <span style="color:#cc0000;font-size:10px;margin-bottom:5px;float:left;">platform</span>
            </div>
        </div>
        <div class="row">
            <div id="desc-position" style="width:100%;">
                <div class="form-group">
                    <input type="hidden" asp-for="GameId" />
                    <textarea id="desc-input" asp-for="Description" class="login-bar" placeholder="Enter game description in this space" title="Enter game description here."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group" style="margin-left:150px;">
        <a class="btn btn-default shadow" onclick="history.go(-1);"><span class="glyphicon glyphicon-arrow-left"></span> cancel</a>
        <button type="submit" class="btn btn-default shadow"><span class="glyphicon glyphicon-ok"></span> save</button>
        <a class="btn btn-danger" data-toggle="modal" href="@("#deleteModal")"><span class="glyphicon glyphicon-remove"></span> delete</a>
    </div>
</form>
<div style="margin-bottom:15px;">
    <div class="modal fade" id="@("deleteModal")" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content text-center">
                @using (Html.BeginForm("Delete", "Character"))
                {
                    <input type="hidden" value="@Model.GameId" name="GameId" />
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">X</button>
                        <h4 class="modal-title">Delete @Model.Title</h4>
                    </div>
                    <div class="modal-body">
                        <img class="character-delete-img-game" asp-route-id="@Model.GameId" src="@Model.Picture" alt="@Model.Title" title="@Model.Title"/>
                        <br/><br/>
                        <p>Are you sure you want to delete @Model.Title?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">no</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
