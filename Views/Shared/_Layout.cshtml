<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        @if (IsSectionDefined("MetaTags"))
        {
            @RenderSection("MetaTags", required: false)
        }
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
        <link rel="icon" href="~/images/ff-moogle.png" />
        <title>Moogle @ViewData["Title"]</title>
        <environment include="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/site.css" />
            @RenderSection("Styles", false)
        </environment>
        <environment exclude="Development">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
                asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
            <hr />
            <footer>
                    <span id="copyright">&copy; </span><a class="navbar-title" asp-controller="Home" asp-action="Index" title="Click to go to search page.">
                    <span class="blue">M</span>
                    <span class="red">o</span>
                    <span class="yellow">o</span>
                    <span class="blue">g</span>
                    <span class="green">l</span>
                    <span class="red">e</span></a> 
                    <span> &nbsp;@DateTime.Now.Year </span>
                    <span> &nbsp;|&nbsp; <a asp-controller="Home" asp-action="About">jack. f. perry, jr.</a></span>
                    <span id="social-icons">
                    <a href="https://www.facebook.com/jackfperryjr" target="_blank" title="Visit Facebook."><i class="fab fa-facebook-square"></i></a>
                    <a href="https://www.linkedin.com/in/jackfperryjr" target="_blank" title="Visit LinkedIn."><i class="fab fa-linkedin"></i></a>
                    <a href="https://github.com/jackfperryjr" target="_blank" title="Visit GitHub."><i class="fab fa-github-square"></i></a>
                    <a href="https://www.instagram.com/jackfperryjr" target="_blank" title="Visit Instagram."><i class="fab fa-instagram"></i></a>
                    </span>
            </footer>
        </div>
        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery"
                    crossorigin="anonymous"
                    integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                    asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                    crossorigin="anonymous"
                    integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
            </script>
        </environment>

        @RenderSection("Scripts", required: false)
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script>
       
        // Click function for navigation menu
        /*
        $(".dropdown").click(function () {
            $(".dropdown-menu", this).not(".in .dropdown-menu").stop(true,true).toggle("slide", { direction: "down" }, 400);
            $(this).toggleClass('open'); 
        },
        function() {
            $(".dropdown-menu", this).not(".in .dropdown-menu").stop(true,true).toggle("slide", { direction: "up" }, 400);
            $(this).toggleClass("open");       
        });
        */
       
        // Or if you prefer, 
        // Hover function for navigation menu
        $(".dropdown").hover(function () {
            $(".dropdown-menu", this).not(".in .dropdown-menu").stop(true,true).toggle("slide", { direction: "up" }, 400);
            $(this).toggleClass('open'); 
        },
        function() {
            $(".dropdown-menu", this).not(".in .dropdown-menu").stop(true,true).toggle("slide", { direction: "up" }, 400);
            $(this).toggleClass("open");       
        });
        
        </script>
    </body>
</html>
