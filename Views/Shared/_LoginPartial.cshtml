@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Moogle.Models

@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
            @if (User.IsInRole("Admin"))
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img class="navbar-icon" src="@Url.Content("/images/icons/icon-me.jpg")"></a>
            }
            else 
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img class="navbar-icon" src="@Url.Content("/images/icons/icon-default-profile.jpg")"></a>
            }
                <ul class="dropdown-menu">                    
                    <li class="pull-right" style="padding:5px 0;border-bottom:1px solid #e0e0e0"><a asp-controller="Manage" asp-action="Index" title="Click to manage profile.">Manage profile &nbsp;<span class="glyphicon glyphicon-cog"></span></a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="pull-right" style="padding:5px 0;border-bottom:1px solid #e0e0e0;"><a asp-controller="Account" asp-action="Register" title="Click to register new user.">Register new user &nbsp;<span class="glyphicon glyphicon-user"></span></a></li>
                        <li class="pull-right"style="padding:5px 0;border-bottom:1px solid #e0e0e0"><a asp-controller="Character" asp-action="Index" title="Click to manage characters.">Manage characters &nbsp;<span class="glyphicon glyphicon-user"></span></a></li>
                    }
                    <li class="pull-right" style="padding:5px 0;border-bottom:1px solid #e0e0e0"><a asp-controller="Game" asp-action="Index" title="Click to manage games.">Manage games &nbsp;<span class="glyphicon glyphicon-cd"></span></a></li>
                    <li class="pull-right" style="padding:5px 0;border-bottom:1px solid #e0e0e0"><a asp-controller="Monster" asp-action="Index" title="Click to manage monsters.">Manage monsters &nbsp;<span class="glyphicon glyphicon-piggy-bank"></span></a></li>
                    <li class="pull-right" style="padding:5px 0"><button id="logout" type="submit" class="btn btn-link navbar-btn navbar-link pull-right" title="Click to sign out.">Logout &nbsp;<span class="glyphicon glyphicon-log-out"></span></button></li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Login">&emsp;</a></li>
    </ul>
    
    

}

