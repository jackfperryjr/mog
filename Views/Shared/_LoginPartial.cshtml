@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Moogle.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-username">@user.FirstName</li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"><img class="navbar-icon" src="@user.Picture"></a>
                <ul class="dropdown-menu">
                    <li><a class="navbar-title" asp-controller="Home" asp-action="Index" title="Click to go to search page.">
                    <span class="blue" style="font-size:18px;">M</span>
                    <span class="red" style="font-size:18px;">o</span>
                    <span class="yellow" style="font-size:18px;">o</span>
                    <span class="blue" style="font-size:18px;">g</span>
                    <span class="green" style="font-size:18px;">l</span>
                    <span class="red" style="font-size:18px;">e</span>
                    <span><img src="@Url.Content("/images/icons/icon-ff-moogle.png")" alt="Moogle face." style="width:20px;margin-left:5px;"></span></a></li>
                    <li><a asp-controller="Manage" asp-action="Index" title="Click to manage profile.">Profile &nbsp;<span class="glyphicon glyphicon-cog"></span></a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="Account" asp-action="Register" title="Click to register new user.">Add new user &nbsp;<span class="glyphicon glyphicon-user"></span></a></li> 
                        <li><a asp-controller="Account" asp-action="UserConfiguration" title="Click to manage users.">Manage users &nbsp;<span class="glyphicon glyphicon-user"></span></a></li> 
                    }
                    <li><a asp-controller="Character" asp-action="Index" title="Click to view or manage characters.">Characters &nbsp;<span class="glyphicon glyphicon-user"></span></a></li>
                    <li><a asp-controller="Game" asp-action="Index" title="Click to view or manage games.">Games &nbsp;<span class="glyphicon glyphicon-cd"></span></a></li>
                    <li><a asp-controller="Monster" asp-action="Index" title="Click to view or manage monsters.">Monsters &nbsp;<span class="glyphicon glyphicon-piggy-bank"></span></a></li>
                    <li><button id="logout" type="submit" class="btn btn-link navbar-btn navbar-link pull-right" title="Click to sign out.">Logout &nbsp;<span class="glyphicon glyphicon-log-out"></span></button></li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-top:20px;text-align:center;">
        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a asp-controller="Home" asp-action="About">About</a></li>
        <li><a asp-controller="Account" asp-action="Login">&emsp;</a></li>
    </ul>
}