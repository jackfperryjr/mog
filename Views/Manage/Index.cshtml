@model IndexViewModel
@{
    ViewData["Title"] = "| Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ 
    var user = await UserManager.GetUserAsync(User); 
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="FirstName" class="login-bar" value="@user.FirstName" placeholder="Enter first name" title="Enter first name"  />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="login-bar" value="@user.LastName" placeholder="Enter last name" title="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="login-bar" placeholder="Enter email" title="Enter email" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="login-bar" placeholder="Enter email"/>
                    <!-- <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button> -->
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="login-bar" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Picture" class="login-bar" placeholder="Enter picture url" title="Enter picture url" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default" style="margin-top:30px;"><span class="glyphicon glyphicon-ok"></span> save</button>
        </form>
    </div>
    <div class="col-md-4">
        <div>
            <img style="margin:23px 0;width:200px;border-radius:50%;box-shadow: 2px 2px 4px #37474F;float:right;" src="@user.Picture" title="Picture of the user.">
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
