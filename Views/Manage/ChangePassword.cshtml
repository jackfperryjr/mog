@model ChangePasswordViewModel
@{
    ViewData["Title"] = "| Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="OldPassword" class="login-bar" placeholder="Enter old password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewPassword" class="login-bar" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="login-bar" placeholder="Enter new password again"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" style="margin-top: 32px;" class="btn btn-default"><span class="glyphicon glyphicon-user"></span> update password</button>
        </form>
    </div>
    <div class="col-md-4">
        <div>
            @if (User.IsInRole("Admin"))
            {
                <img style="margin:23px 0;width:200px;border-radius:50%;box-shadow: 2px 2px 4px #37474F;float:right;" src="@Url.Content("/images/icons/icon-me.jpg")" title="Picture of the user.">
            }
            else
            {
                <img style="margin:25px 20px;width:200px;border-radius:50%;box-shadow: 2px 2px 4px #37474F;" src="@Url.Content("/images/icons/icon-default-profile.jpg")" title="Picture of the user.">
            }
        </div>
        <button type="submit" class="btn btn-default pull-right">change picture</button>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
